package com.wipro.entity.relationaldemo.service.impl;

import java.util.Set;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.wipro.entity.relationaldemo.entity.Person;
import com.wipro.entity.relationaldemo.repo.PersonRepo;
import com.wipro.entity.relationaldemo.service.PersonService;

@Service
public class PersonServiceImpl implements PersonService {

	@Autowired
	PersonRepo personRepo;
	
	@Override
	public void save(Person person) {
		personRepo.save(person);

	}

	@Override
	public Set<Person> findAll() {
		return personRepo.findAll(); 
	}

}
