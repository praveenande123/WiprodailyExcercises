package com.wipro.restdemo.controller;

import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.wipro.restdemo.dto.Mobile;

@RestController
@RequestMapping("/mobile")
public class MobileController {

	@PostMapping
	public String receiveMobile(@RequestBody Mobile mobile) {
	      System.out.println("Mobile Data "+ mobile);
	      return "Successfull POST";
	}
	
	@PutMapping
    public String updateMobile(@RequestBody Mobile mobile) {
        System.out.println("PUT " + mobile);
        return "Updated";
    }
	
	@GetMapping
    public String getMobile() {
        System.out.println("GET");
        return "Received";
    }
	
	@DeleteMapping
    public String deleteMobile(@RequestParam String modelNumber) {
        System.out.println("DELETE " + modelNumber);
        return "Deleted!";
    }
}

